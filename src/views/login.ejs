<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Quiz App</title>
    <%- include("partials/_imports.ejs") %>
  </head>

  <body>

    <%- include("partials/_header.ejs") %>

    <main class="container d-flex flex-column flex-lg-row mt-lg-4">

      <!-- MAIN WINDOW (FULL) -->
      <div class="col-12">
        <section id="main-full" class="form-register d-flex flex-column flex-lg-row align-content-between justify-content-lg-around">

          <!-- FORM -->
          <div class="col-lg-5">
              <h1 class="h3">Login</h1>
              <form class="form" action="/login" method="POST">
                <div class="form-group mb-2">
                  <!-- USERNAME -->
                  <label for="username" class="form-label text-muted">Username/Email</label>
                  <input class="form-control" type="text" name="username" required>
                  <!-- PASSWORD -->
                  <label for="password" class="form-label text-muted mt-2">Password</label>
                  <input class="form-control" type="password" name="password" required>
                  <!-- SUBMIT -->
                  <button type="submit" class="btn-custom-primary mt-5">Log in</button>
                </div>
              </form>
            <p class="text-muted mt-4">First time here? <a href="/register">Register for FREE</a>.</p>
          </div>
          <span class="divider-h d-none d-md-inline"></span>
          <span class="divider-v d-inline d-lg-none"></span>
          <div class="col-lg-5">
            <h1 class="h3">You'll be able to:</h1>
              <div class="mt-4 lead">
                <p>✏️ Publish your own quizzes</p>
                <p>🏆 Earn achievements</p>
                <p>📅 Track your daily progress</p>
                <p>📚 Access free study tools</p>
                <p>❤️ Save your favorite quizzes</p>
                <p>👍 Upvote and post comments</p>
              </div>
            <h1 class="h4 mt-4">...and more!</h1>
          </div>

        </section>
      </div>

      </main>

  <%- include("partials/_footer.ejs") %>

  </body>

</html>